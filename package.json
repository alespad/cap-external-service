{
    "name": "ppm_poc",
    "version": "1.0.0",
    "description": "cap ppm poc",
    "repository": "<Add your repository here>",
    "license": "UNLICENSED",
    "private": true,
    "dependencies": {
        "@sap-cloud-sdk/http-client": "^2.14.0",
        "@sap-cloud-sdk/util": "^2.14.0",
        "@sap/cds": "^6",
        "@sap/low-code-event-handler": "^1.2.1",
        "@sap/mdk-tools": "^1.3.1",
        "@sap/xsenv": ">=3.3.2 <3.3.3",
        "@sap/xssec": "^3.2.17",
        "express": "^4",
        "hdb": "^0.19.5",
        "passport": "^0.6.0"
    },
    "devDependencies": {
        "@sap/ux-specification": "^1.102.16",
        "sqlite3": "^5.0.4"
    },
    "scripts": {
        "start": "cds run"
    },
    "engines": {
        "node": "^16.15"
    },
    "eslintConfig": {
        "extends": "eslint:recommended",
        "env": {
            "es2020": true,
            "node": true,
            "jest": true,
            "mocha": true
        },
        "globals": {
            "SELECT": true,
            "INSERT": true,
            "UPDATE": true,
            "DELETE": true,
            "CREATE": true,
            "DROP": true,
            "CDL": true,
            "CQL": true,
            "CXL": true,
            "cds": true
        },
        "rules": {
            "no-console": "off",
            "require-atomic-updates": "off"
        }
    },
    "cds": {
        "requires": {
            "[production]": {
                "db": {
                    "kind": "hana-cloud"
                }
            },
            "db": {
                "kind": "sql"
            },
            "app-service": {
                "impl": "@sap/low-code-event-handler"
            },
            "auth": {
                "kind": "xsuaa"
            },
            "ZWEB_PPM_SRV": {
                "kind": "odata-v2",
                "model": "srv/external/ZWEB_PPM_SRV",
                "[production]": {
                    "credentials": {
                        "destination": "S4_S21",
                        "path": "/sap/opu/odata/sap/ZWEB_PPM_SRV"
                    }
                }
            }
        },
        "features": {
            "fetch_csrf": true
        }
    },
    "lcap": true
}